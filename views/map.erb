<h1>MAP!</h1>
<div id="map"></div>
<script type="text/javascript" charset="utf-8">
  var map = L.map('map').setView([40.7142, -74.0064], 13);
  L.marker(<%= @start %>).addTo(map); 
  L.marker(<%= @end %>).addTo(map); 
  L.polygon([
    <%= @start %>,
    <%= @end %>

    ]).addTo(map);


